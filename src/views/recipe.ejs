<%- include('partials/header') %>

<section>
    <h2>Nombre de la receta</h2>
    <span><%= recipe.name %></span>
    <img src="<%= recipe.img%>" alt="<%= recipe.name%>">
</section>

<section>
    <h2>Tiempo estimado</h2>
    <span><%= recipe.cooking_time %></span>
</section>

<section>
    <h2>Ingredientes</h2>
    <p><%= recipe.ingredientes%></p>
</section>

<section>
    <h2>Procedimiento</h2>
    <p><%= recipe.steps %></p>
</section>

<section>
    <h2>Editar receta</h2>
    <a href="recipe/update?id=<%= recipe.id%>"><span>Editar receta</span></a>
</section>

<%- include('partials/footer') %>